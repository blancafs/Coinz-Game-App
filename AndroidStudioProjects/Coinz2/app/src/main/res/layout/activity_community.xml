<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CommunityActivity"
    android:background="@color/graylight">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:id="@+id/toplinear"
            android:layout_width="700dp"
            android:layout_height="342dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:background="@drawable/gradientbackground"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivCommunity"
                android:layout_width="178dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_marginTop="11dp"
                android:src="@drawable/community2" />

            <TextView
                android:id="@+id/tvMyCommunity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="0dp"
                android:fontFamily="serif-monospace"
                android:text="COMMUNITY"
                android:textColor="@color/white"
                android:textSize="32dp"
                android:textStyle="bold" />

        </LinearLayout>

        <android.support.v7.widget.CardView
            android:layout_width="370dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="215dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/rounded_corner"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="serif-monospace"
                        android:text="Coin to send:"
                        android:textColor="@color/graylight"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvChosenCoin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="serif-monospace"
                        android:paddingTop="10dp"
                        android:text="level"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="15dp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="72dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_corner"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="serif-monospace"
                        android:text="Community Level"
                        android:textColor="@color/graylight"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvCOMMLEVEL"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="serif-monospace"
                        android:paddingTop="10dp"
                        android:text="commlevel"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>



        <android.support.v7.widget.CardView
            android:id="@+id/cardview2"
            android:layout_width="600dp"
            android:layout_height="260dp"
            android:layout_marginTop="310dp"
            android:layout_marginBottom="1dp"
            android:foregroundGravity="center">

            <ListView
                android:id="@+id/listviewComm"
                android:layout_width="454dp"
                android:layout_height="match_parent"
                android:background="@color/yellow"
                android:divider="@color/yellow"
                android:dividerHeight="10dp"
                android:gravity="center" />
        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginTop="570dp"
            android:layout_marginBottom="0dp"
            android:background="@drawable/gradientbackground"
            android:gravity="right">

            <Button
                android:id="@+id/btcommtowallet"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="170dp"
                android:background="@drawable/rounded_corner"
                android:elevation="56dp"
                android:fontFamily="serif-monospace"
                android:gravity="center"
                android:text="WALLET"
                android:textColor="@color/white"
                android:padding="10dp"
                android:textSize="22dp"
                android:textStyle="bold"
                app:layout_constraintVertical_bias="0.114" />

            <Button
                android:id="@+id/btcommtoMap"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/rounded_corner"
                android:elevation="56dp"
                android:fontFamily="serif-monospace"
                android:gravity="center"
                android:text="MAP"
                android:textColor="@color/white"
                android:textSize="22dp"
                android:textStyle="bold"
                app:layout_constraintVertical_bias="0.114" />
        </LinearLayout>

    </RelativeLayout>







</LinearLayout>